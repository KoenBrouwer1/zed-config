// Zed settings
{
  
  "disable_ai": true,
  "tabs": {
    "file_icons": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "hover_popover_enabled": false,
  "drag_and_drop_selection": {
    "enabled": true
  },
  "project_panel": {
    "dock": "right",
  },
  "terminal": {
    "default_height": 220.0,
    "font_family": ".ZedMono",
    "font_size": 12.0,
    "shell": "system"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": true
  },
  "ui_font_family": "Arial",
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 400.0,
  "buffer_font_family": "Adwaita Sans",
  "icon_theme": "Catppuccin Mocha",
  "base_keymap": "VSCode",
  "sticky_scroll": {
    "enabled": false
  },
  "minimap": {
    "show": "never"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "auto_indent_on_paste": true,
  "tab_size": 2,
  "ui_font_size": 13,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Dark",
    "dark": "One Dark Pro"
  }
}
